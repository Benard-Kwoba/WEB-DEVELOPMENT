                <div style="width: 30vw; margin-left: 1vw; margin-top: 6vh;">
                    <h4>HTML API</h4>
                    <h2>HTML API Example</h2>
                    <button id="fetchDataButton" style="background-color: green; color: white;">Fetch and Download Data</button>
                    <script>
                        // Function to fetch data from an API and initiate download
                        function fetchAndDownloadData() {
                            var apiUrl = 'https://jsonplaceholder.typicode.com/users';

                            fetch(apiUrl)
                                .then(function(response) {
                                    return response.json();
                                })
                                .then(function(data) {
                                    // Convert the JSON data to a Blob
                                    var jsonData = JSON.stringify(data, null, 2);
                                    var blob = new Blob([jsonData], { type: 'application/json' });

                                    // Create a download link and trigger the download
                                    var a = document.createElement('a');
                                    a.href = URL.createObjectURL(blob);
                                    a.download = 'api_data.json';
                                    a.style.display = 'none';
                                    document.body.appendChild(a);
                                    a.click();
                                    document.body.removeChild(a);
                                })
                                .catch(function(error) {
                                    console.error('Error:', error);
                                });
                        }

                        // Add a click event listener to the "Fetch and Download Data" button
                        var fetchDataButton = document.getElementById('fetchDataButton');
                        fetchDataButton.addEventListener('click', fetchAndDownloadData);
                    </script>
                </div>
            </div>
