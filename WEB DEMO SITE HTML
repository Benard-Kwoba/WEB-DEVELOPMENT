                <h3 style="color: black;text-decoration: underline;">SOME JAVASCRIPT</h3>
                <a id="goToTop" style="margin-left: 60vw; margin-top: 0; background-color: transparent;
                    color: magenta; font-weight: bolder;
                    cursor: pointer;">Go to Top</a>
                <script>
                    // Function to scroll to the top of the page
                    function scrollToTop() {
                        window.scrollTo({ top: 0, behavior: 'smooth' });  // see bahavior type 'auto'
                    }
            
                    // Attach a click event listener to the "Go to Top" link
                    const goToTopLink = document.getElementById('goToTop');
                    goToTopLink.addEventListener('click', scrollToTop);
            
                    // Show the "Go to Top" link when scrolling down the page
                    window.addEventListener('scroll', function() {
                        if (window.scrollY > 100) {
                            goToTopLink.style.display = 'block';
                        } else {
                            goToTopLink.style.display = 'none';
                        }
                    });
                </script>
                <h4 style="text-decoration: underline;">AGE CALCULATOR</h4>
                <script>
                    function calculateAge() {
                        var birthYearInput = document.getElementById("birthYear");
                        var resultElement = document.getElementById("result");
            
                        var birthYear = parseInt(birthYearInput.value);
                        if (isNaN(birthYear)) {
                            resultElement.textContent = "Please enter a valid birth year.";
                        } else {
                            var currentYear = new Date().getFullYear();
                            var age = currentYear - birthYear;
                            resultElement.textContent = "Your are: " + age + " years old";
                        }
                    }
                </script>
                <label for="birthYear">Enter your birth year: </label>
                <input type="number" id="birthYear" style="background-color: cadetblue; color: white;">
                <button type="button" onclick="calculateAge()" style="cursor: pointer;">Calculate Age</button>
                <p style="color: red;" id="result"></p>
            </div>
