                <h3 style="color: white;text-decoration: underline;">JAVASCRIPT</h3>
                <h4 style="text-decoration: underline;">AGE CALCULATOR</h4>
                <script>
                    function calculateAge() {
                        var birthYearInput = document.getElementById("birthYear");
                        var resultElement = document.getElementById("result");
            
                        var birthYear = parseInt(birthYearInput.value);
                        if (isNaN(birthYear)) {
                            resultElement.textContent = "Please enter a valid birth year.";
                        } else {
                            var currentYear = new Date().getFullYear();
                            var age = currentYear - birthYear;
                            resultElement.textContent = "Your are: " + age + " years old";
                        }
                    }
                </script>
                <label for="birthYear">Enter your birth year: </label>
                <input type="number" id="birthYear">
                <button type="button" onclick="calculateAge()">Calculate Age</button>
                <p style="color: red;" id="result"></p>
            </div>
